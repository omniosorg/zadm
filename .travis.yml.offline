language: perl

git:
  depth: 3
  
perl:
  - "5.30"
  - "5.28"
  - "5.26"

# disable cpanm

before_install: true

install: true

before_script:
  - perlbrew use $PERLVERS
  - ./bootstrap

script:
  - ./configure
  - make
  - make dist
  - mkdir ~/src
  - cp zadm*.tar.gz ~/src
  - cd ~/src
  - tar xvf zadm*gz
  - cd zadm*/
  - ./configure --prefix=$HOME/zadm
  - make
  - make install
  - cd $HOME/zadm/bin
  - ./zadm version

